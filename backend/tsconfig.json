{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2022"],
		"skipLibCheck": true,
		"allowJs": true,
		"outDir": "build",
		"rootDir": ".",
		"sourceMap": false,
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"hooks": ["copy-files"]
}
