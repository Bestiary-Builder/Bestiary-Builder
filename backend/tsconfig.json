{
	"compilerOptions": {
		"target": "es5",
		"module": "CommonJs",
		"lib": ["es2022"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
