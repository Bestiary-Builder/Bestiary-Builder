{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		"composite": true,
		"target": "es2021",
		"lib": ["dom", "esnext"],
		"baseUrl": ".",
		"module": "esnext",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["../*"]
		},
		"types": [
			"markdown-it"
		],
		"noEmit": false,
		"allowSyntheticDefaultImports": true
	},
	"references": [
		{
			"path": "../shared"
		}
	],
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.json"],
	"exclude": ["src/**/__tests__/*"]
}
